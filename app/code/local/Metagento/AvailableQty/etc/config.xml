<?xml version="1.0"?>
<config>
    <modules>
        <Metagento_AvailableQty>
            <version>1.1.0</version>
        </Metagento_AvailableQty>
    </modules>
    <frontend>
        <layout>
            <updates>
                <availableqty>
                    <file>availableqty.xml</file>
                </availableqty>
            </updates>
        </layout>
        <routers>
            <availableqty>
                <use>standard</use>
                <args>
                    <module>Metagento_AvailableQty</module>
                    <frontName>availableqty</frontName>
                </args>
            </availableqty>
        </routers>
        <translate>
            <modules>
                <Metagento_AvailableQty>
                    <files>
                        <default>Metagento_AvailableQty.csv</default>
                    </files>
                </Metagento_AvailableQty>
            </modules>
        </translate>
        <events>
            <sales_quote_item_qty_set_after>
                <observers>
                    <availableqty_sales_quote_item_qty_set_after>
                        <type>singleton</type>
                        <class>availableqty/observer</class>
                        <method>sales_quote_item_qty_set_after</method>
                    </availableqty_sales_quote_item_qty_set_after>
                </observers>
            </sales_quote_item_qty_set_after>
        </events>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Metagento_AvailableQty before="Mage_Adminhtml">Metagento_AvailableQty_Adminhtml</Metagento_AvailableQty>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <availableqty>
                    <file>availableqty.xml</file>
                </availableqty>
            </updates>
        </layout>
        <translate>
            <modules>
                <Metagento_AvailableQty>
                    <files>
                        <default>Metagento_AvailableQty.csv</default>
                    </files>
                </Metagento_AvailableQty>
            </modules>
        </translate>
    </adminhtml>
    <global>
        <helpers>
            <availableqty>
                <class>Metagento_AvailableQty_Helper</class>
            </availableqty>
        </helpers>
        <blocks>
            <availableqty>
                <class>Metagento_AvailableQty_Block</class>
            </availableqty>
        </blocks>
        <models>
            <availableqty>
                <class>Metagento_AvailableQty_Model</class>
                <resourceModel>availableqty_mysql4</resourceModel>
            </availableqty>
            <availableqty_mysql4>
                <class>Metagento_AvailableQty_Model_Mysql4</class>
                <!--<entities>-->
                <!--<combo>-->
                <!--<table>availableqty_combo</table>-->
                <!--</combo>-->
                <!--</entities>-->
            </availableqty_mysql4>
        </models>
        <resources>
            <availableqty_setup>
                <setup>
                    <module>Metagento_AvailableQty</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </availableqty_setup>
        </resources>
    </global>
    <default>
        <availableqty>
            <general>
                <enabled>0</enabled>
                <auto_add>0</auto_add>
            </general>
        </availableqty>
    </default>
</config>